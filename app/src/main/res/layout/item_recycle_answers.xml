<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_marginBottom="@dimen/spacing_large">

    <FrameLayout
        android:id="@+id/answer_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:background="@drawable/background_answer_un_selected">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/hekaya"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/primary_color"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="تثبيت العقيدة الإيمانية الإسلامية بأركان الإيمان كلها."

                />

            <ImageView
                android:id="@+id/test_status_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/answer_un_selected_icon"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>




    </FrameLayout>

    <TextView
        android:id="@+id/txt_option_char"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:fontFamily="@font/hekaya"
        android:text="أ"
        android:textSize="15dp"
        android:textColor="@color/background_color"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/answer_background_layout"
        app:layout_constraintEnd_toStartOf="@+id/answer_background_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>